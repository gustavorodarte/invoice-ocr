{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/invoice": [
        "layers/invoice/src"
      ],
      "@app/invoice/*": [
        "layers/invoice/src/*"
      ],
      "@app/prisma": [
        "layers/prisma/src"
      ],
      "@app/prisma/*": [
        "layers/prisma/src/*"
      ],
      "/opt/prisma": ["layers/prisma/src"],
      "/opt/invoice": ["layers/invoice/src"],
    }
  },
  "include": [
    "lambdas/**/*",
    "layers/**/*"
  ]
}